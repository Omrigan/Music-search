<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about"
            android:id="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Changing password:"
            android:id="@+id/textView1" android:layout_alignLeft="@+id/textView" android:layout_below="@+id/textView"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/editTextNewPass"
            android:layout_toLeftOf="@+id/button" android:layout_below="@+id/editTextOldPass"
            android:layout_alignLeft="@+id/editTextOldPass" android:layout_alignRight="@+id/textView"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/editTextOldPass"
            android:layout_alignRight="@+id/textView" android:layout_below="@+id/textView1"
            android:layout_toRightOf="@+id/textView3"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Old:"
            android:id="@+id/textView2" android:layout_alignLeft="@+id/textView" android:layout_below="@+id/textView1"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New:"
            android:id="@+id/textView3"
            android:layout_alignLeft="@+id/textView" android:layout_alignTop="@+id/editTextNewPass"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change"
            android:id="@+id/button"
            android:onClick="onClick" android:layout_alignRight="@+id/textView" android:layout_below="@id/editTextNewPass"/>
</RelativeLayout>